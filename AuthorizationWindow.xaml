<Window x:Class="ToysStoreApp.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToysStoreApp"
        mc:Ignorable="d"
        Title="AuthorizationWindow" Height="450" Width="400" Background="#FFCB9A9A">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="50" MaxHeight="70"/>
            <RowDefinition MinHeight="90" MaxHeight="130"/>
            <RowDefinition MinHeight="90" MaxHeight="130"/>
            <RowDefinition MinHeight="50" MaxHeight="70"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Авторизация" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18"/>
        <TextBlock Text="Введите логин" TextAlignment="Center" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="18"/>
        <TextBox Grid.Row="1" x:Name="LoginBox"/>
        <TextBlock Grid.Row="2" Text="Введите пароль" TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="18"/>
        <PasswordBox Grid.Row="2" x:Name="PasswordBox"/> 
        <Button x:Name="ButtonLogin" Grid.Row="3" Content="Войти" Click="ButtonLogin_Click"/>
    </Grid>
</Window>
